<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgV_product"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_samsung__galaxy_s20">

                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imgV_product"
                    android:layout_toRightOf="@+id/imgV_product"
                    android:orientation="vertical"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/txt_product_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:text="Samsung galaxy S20" />

                    <TextView
                        android:id="@+id/txt_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="16sp"
                        android:text="10.000.000" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imgB_icon_edit_phone"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/imgB_icon_delete_phone"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_icon_edit_black"
                    android:background="@android:color/white"
                    >

                </ImageButton>

                <ImageButton
                    android:id="@+id/imgB_icon_delete_phone"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_icon_delete_black"
                    android:background="@android:color/white">

                </ImageButton>

            </RelativeLayout>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>